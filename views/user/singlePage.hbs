  function shareOnWhatsApp(title, image, newsId) {
      const baseUrl = window.location.origin; 
         const staticText = "Check out this news: ";

    // Combine the static text and dynamic title
    const fullTitle = `${staticText} ${title}`;
     const encodedTitle = encodeURIComponent(fullTitle);
    const encodedUrl = encodeURIComponent(`${baseUrl}/detailnews/${newsId}`);
  /*  const whatsappLink = `https://wa.me/?text=${encodedUrl}`; */
      const whatsappLink = `https://wa.me/?text=${encodedTitle} - ${encodedUrl}`;

    // Open WhatsApp link in a new window or tab
    window.open(whatsappLink, '_blank');

  }
</script>
                  